<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/farmImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/add_photo_alternate_24"/>

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="185sp"
                android:layout_marginHorizontal="5dp"
                android:columnCount="2"
                android:rowCount="2">

                <TextView
                    android:layout_width="23dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="fill"
                    android:text="Farm"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/bookedFarm"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="12"
                    android:layout_gravity="fill"
                    android:textColor="#1E88E5"
                    android:textSize="18dp">

                </TextView>

                <TextView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_marginRight="5dp"
                    android:text="Price"
                    android:textSize="15sp"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/bookingPrice"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="12"
                    android:layout_gravity="fill"
                    android:textColor="#1E88E5"
                    android:textSize="18dp">

                </TextView>

                <TextView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_marginRight="5dp"
                    android:text="Date"
                    android:textSize="15dp"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/bookingDate"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="12"
                    android:layout_gravity="fill"
                    android:textColor="#1E88E5"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:text="Customer"
                    android:layout_marginRight="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/customerName"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="12"
                    android:layout_gravity="fill"
                    android:textColor="#1E88E5"
                    android:textSize="18dp"/>


                <TextView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_marginRight="5dp"
                    android:text="Mobile"
                    android:textSize="15dp"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/customerMobile"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="12"
                    android:layout_gravity="fill"
                    android:textColor="#1E88E5"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_marginRight="5dp"
                    android:text="Payment"
                    android:textSize="15dp"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/modeOfPayment"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="12"
                    android:layout_gravity="fill"
                    android:textColor="#1E88E5"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:text="Staus"
                    android:layout_marginRight="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/bookingStatus"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="12"
                    android:layout_gravity="fill"
                    android:textColor="#1E88E5"
                    android:textSize="18dp"/>

            </GridLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/approve"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                app:strokeWidth="5dp"
                app:strokeColor="@color/teal_200"
                android:layout_marginHorizontal="5dp"
                android:src="@drawable/accept_circle_outline_24"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/reject"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                app:strokeWidth="5dp"
                android:layout_marginHorizontal="5dp"
                app:strokeColor="@color/teal_200"
                android:src="@drawable/reject_24"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/deleteFarm"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/delete"
                app:strokeWidth="5dp"
                android:layout_marginHorizontal="5dp"
                app:strokeColor="@color/teal_200"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>