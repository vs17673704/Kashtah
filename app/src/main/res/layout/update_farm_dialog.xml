<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:background="#1E88E5"
            android:padding="12dp"
            android:id="@+id/farmTitle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Update Farm ...."
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:text="Farm name:"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateFarmName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="37dp"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/textView4"
                android:layout_toRightOf="@+id/textView4"
                android:hint="Enter farm name"
                android:textColor="#000000"
                android:textSize="13dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="27dp"
                android:text="Price:"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateFarmPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/updateFarmName"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="20dp"
                android:layout_toEndOf="@+id/textView6"
                android:layout_toRightOf="@+id/textView6"
                android:hint="Enter price without overnight stay"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="13dp"
                android:layout_alignParentRight="true" />

            <EditText
                android:id="@+id/updateFarmPriceOvernight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/updateFarmPrice"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="105dp"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="5dp"
                android:hint="Enter price with overnight stay"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="69dp"
                android:text="Mobile no:"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addFarmMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/updateFarmPriceOvernight"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginStart="44dp"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@+id/textView"
                android:layout_toRightOf="@+id/textView"
                android:hint="Enter farm location link"
                android:inputType="phone"
                android:maxLength="10"
                android:textSize="13dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="0dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="27dp"
                android:text="Description:"
                android:textColor="#000000"
                android:textSize="13dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateFarmDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addFarmMobile"
                android:layout_marginStart="36dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:hint="Enter description"
                android:maxLength="80"
                android:maxLines="2"
                android:textSize="13dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30dp">
            <Button
                android:layout_margin="10dp"
                android:id="@+id/updateFarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPDATE"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:backgroundTint="#1E88E5"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:layout_margin="10dp"
                android:id="@+id/close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Close"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:backgroundTint="#1E88E5"
                android:textStyle="bold"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>